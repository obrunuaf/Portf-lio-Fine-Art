                    <p className="font-sans text-muted text-sm md:text-base leading-relaxed mt-4 max-w-2xl">
                      {artwork.description}
                    </p>

                    {/* Actions */}
                    <div className="flex flex-wrap gap-3 mt-8">
                      <button
                        className="px-6 py-3 bg-ink text-canvas font-sans text-xs uppercase tracking-widest rounded-sm hover:bg-accent transition-colors duration-300"
                        onClick={() => setShowWall(true)}
