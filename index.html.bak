        const [mobileMenuOpen, setMobileMenuOpen] = useState(false);

        return (
          <>
            <Navbar onMobileMenuToggle={() => setMobileMenuOpen(true)} />
            <MobileMenu
              open={mobileMenuOpen}
              onClose={() => setMobileMenuOpen(false)}
            />
            <Hero />
            <Gallery onOpenModal={setModalArt} />
            <About />
            <Footer />
            {modalArt && (
              <Modal
                artwork={modalArt}
                onClose={() => setModalArt(null)}
                onPrev={artworks.indexOf(modalArt) > 0 ? () => setModalArt(artworks[artworks.indexOf(modalArt) - 1]) : null}
